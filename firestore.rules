rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Funções de Ajuda
    function isAuthenticated() {
      return request.auth != null;
    }

    function isSuperAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isSuperAdmin == true;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }

    function belongsTo(companyId) {
      return isAuthenticated() && getUserData().companyId == companyId;
    }

    // Regras por Coleção
    
    // Coleção de Usuários
    match /users/{userId} {
      // ✅ O usuário SEMPRE pode ler/escrever seu próprio perfil (sem chamar getUserData())
      allow read: if request.auth.uid == userId;
      
      // Admin pode ler usuários da sua empresa. SuperAdmin pode ler todos.
      allow read: if isSuperAdmin() || 
                    (hasRole('admin') && belongsTo(resource.data.companyId));
      
      // Usuário pode atualizar apenas campos pessoais. SuperAdmin pode escrever qualquer coisa.
      allow write: if request.auth.uid == userId && 
                      request.resource.data.diff(resource.data).affectedKeys()
                        .hasOnly(['nome', 'email', 'telefone', 'fotoUrl', 'primeiroAcesso', 'fotoBase64']);
      allow write: if isSuperAdmin();
    }

    // Coleção de Pontos
    match /pontos/{pontoId} {
      allow read: if isSuperAdmin() || 
                    request.auth.uid == resource.data.userId || 
                    (hasRole('admin') && belongsTo(resource.data.companyId));
      
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid && 
                      belongsTo(request.resource.data.companyId);
      
      allow update, delete: if isSuperAdmin() || 
                              (hasRole('admin') && belongsTo(resource.data.companyId));
    }

    // Coleção de Empresas
    match /companies/{companyId} {
      allow read: if isSuperAdmin() || belongsTo(companyId);
      allow write: if isSuperAdmin();
    }

    // Coleção de Configurações Globais (Legacy)
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isSuperAdmin();
    }
  }
}
